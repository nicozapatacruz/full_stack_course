<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("../partials/head.ejs") %>
        <link href="/css/styles_register.css" rel="stylesheet" />

    <script src="/js/validations/validationsFrontUserRegister.js"></script>
</head>

<body>
    <%- include("../partials/header.ejs") %>

        <main>

            <form action="./register" method="POST" class="registration" enctype="multipart/form-data">
                <div class="container">
                    <h2 class="headlines">Registrate</h2>
                    <div class="wrapper">
                        <section class="user-reg">
                            <div class="margin-vertical-20">
                                <h3 class="subs">Ingresa tus datos:</h3>
                            </div>
                            <div id="errorsFront">
                            </div>
                            <div class="margin-vertical-20">
                                <label for="email">Correo Electrónico</label>
                                <input type="text" id="email" name="email" placeholder="Ingresa tu correo electrónico"
                                    value="<%=locals.old && old.email ? old.email : null %>">
                                <% if (locals.errors && errors.email) { %>
                                    <div class="rojopirupi">
                                        <%= errors.email.msg %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="margin-vertical-20">
                                <label for="user_name">Nombre de Usuario</label>
                                <input type="text" id="user_name" name="user_name"
                                    placeholder="Ingresa tu nombre de usuario"
                                    value="<%=locals.old && old.user_name ? old.user_name : null %>">

                                <% if (locals.errors && errors.user_name) { %>
                                    <div class="rojopirupi">
                                        <%= errors.user_name.msg %>
                                    </div>
                                    <% } %>

                            </div>
                            <div class="margin-vertical-20">
                                <label for="address">Domicilio</label>
                                <input type="text" id="address" name="address" placeholder="Ingresa tu dirección"
                                    value="<%=locals.old && old.address ? old.address : null %>">
                                <% if (locals.errors && errors.address) { %>
                                    <div class="rojopirupi">
                                        <%= errors.address.msg %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="margin-vertical-20">
                                <label for="user_image">Elegí tu foto de perfil</label>
                                <input type="file" id="user_image" name="user_image" accept="image/*">
                                <% if (locals.errors && errors.image) { %>
                                    <div class="rojopirupi">
                                        <%= errors.image.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="margin-vertical-20">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password"
                                    placeholder="Ingresa tu contraseña">
                                <% if (locals.errors && errors.password) { %>
                                    <div class="rojopirupi">
                                        <%= errors.password.msg %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="margin-vertical-20">
                                <label for="confirmPassword">Repetir Contraseña</label>
                                <input type="password" name="confirmPassword" id="confirmPassword"
                                    placeholder="Repetí la contraseña ingresada">

                            </div>
                        </section>
                        <section class="reg-botones">
                            <button type="submit" class="boton">Enviar
                                información</button>
                            <button type="reset" class="boton">Borrar
                                información</button>
                        </section>
                        </section>
                    </div>
                </div>
            </form>
        </main>

        <%- include("../partials/footer.ejs") %>

</body>

</html>