<body>
  <%- include("../partials/header.ejs") %>

    <main>
       <section class="bg-image">
                <section class="delete-display">
                    <section class="blanc-space"></section>
                    <section class="user-delete">
                        <section class="box-delete">
                            <h2 class="headlines margin-bottom-20">Estas seguro que quieres eliminar el producto <%= product.name %>?????</h2>
                            <div class = "deleted_photo_container">
                                <img class="img-consol" src="/images/productos/<%= product.product_image %>" style="width:100%" height="100%" />
                            </div>
                            <div class="margin-vertical-40-20">
                                    <div>
                                      <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                                        <button class="boton" type="submit">Eliminar</button>
                                      </form>
                                    </div>
                            </div>
                        </section>
                    </section>
                </section>
            </section>
    </main>
</body>

